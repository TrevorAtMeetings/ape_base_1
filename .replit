modules = ["web", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["poppler_utils", "pkg-config", "pango", "cairo", "gdk-pixbuf", "fontconfig", "harfbuzz"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000
