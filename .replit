modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "fontconfig", "freetype", "ghostscript", "glib", "gobject-introspection", "gtk3", "harfbuzz", "libxcrypt", "openssl", "pango", "pkg-config", "postgresql", "qhull", "tcl", "tk", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python -m app.app"]

[workflows]

[[workflows.workflow]]
name = "Start Flask App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m app.app"
waitForPort = 5000

[[workflows.workflow]]
name = "Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m app.app"

[[workflows.workflow]]
name = "Production Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --workers 2 --timeout 120 app.app:app"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80
